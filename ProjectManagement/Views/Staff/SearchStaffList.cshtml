@using ProjectManagement.Models

@model List<StaffUserViewModel>

@if (Model.Count <= 0)
{
    <tr>
        <td colspan="6">No records found</td>
    </tr>
}
else
{
    foreach (var item in Model)
    {
        <tr data-id="@item.UserId">
            <td>
                @Html.DisplayFor(modelitem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Workstream.Name)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Designation.Name)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Mobile)
            </td>
            <td>
                @Html.CheckBoxFor(modelitem => item.IsBlocked, new { Value = item.UserId })
            </td>
            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.StaffID }) |
                    @Html.ActionLink("Delete", "Delete", "Staff", new { id = item.StaffID })
                </td>*@
        </tr>
    }
}